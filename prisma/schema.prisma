// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int             @id @default(autoincrement())
  email              String          @unique
  name               String
  password           String
  created_at         DateTime        @default(now())
  isVerified         Boolean         @default(false)
  profile_picture    String?
  Profile_Preference UserProfile?
  Comment            Comment[]
  CreatedPost        Post[]          @relation("created")
  likedPost          Post[]          @relation("Likes")
  savedPost          Post[]          @relation("saved")
  SentRequest        FriendRequest[] @relation("SentRequests")
  ReceivedRequest    FriendRequest[] @relation("ReceivedRequests")
  friends            User[]          @relation("Friends")
  friendsof          User[]          @relation("Friends")
}

model FriendRequest {
  id         Int    @id @default(autoincrement())
  senderId   Int
  receiverId Int
  status     Status
  sender     User   @relation("SentRequests", fields: [senderId], references: [id])
  receiver   User   @relation("ReceivedRequests", fields: [receiverId], references: [id])
}

model UserProfile {
  id          Int      @id @default(autoincrement())
  avatar      String
  bio         String
  birthdate   DateTime
  gender      Gender
  location    String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int      @unique
  accountType Type     @default(Public)
}

model Post {
  id         Int       @id @default(autoincrement())
  content    String
  image_url  String[]
  image_keys String[]
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  author     User      @relation("created", fields: [user_id], references: [id])
  user_id    Int
  savedBy    User[]    @relation("saved")
  likes      User[]    @relation("Likes")
  Comment    Comment[]
}

model Comment {
  id         Int      @id @default(autoincrement())
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id    Int
  post_id    Int
  author     User     @relation(fields: [user_id], references: [id])
  post       Post     @relation(fields: [post_id], references: [id])
}

enum Gender {
  Male
  Female
  Prefer_Not_To_Say
}

enum Type {
  Private
  Public
}

enum Status {
  Pending
  Approved
}
